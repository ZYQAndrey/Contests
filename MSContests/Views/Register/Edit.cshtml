@model MSContests.Models.Request

@{
    ViewBag.Title = "Управление заявкой";
}

<div class="page-header">
    <div class="page-header-content">
        <h1>@ViewBag.Title</h1>
        <a class="back-button big page-back" title="Назад" href="@Url.Action("Index", "Register")"></a>
    </div>
</div>
 
<div class="page-region">
    <div class="page-region-content">

        @using (Html.BeginForm()) {
            @Html.ValidationSummary(true)

    <fieldset>
        <legend>Заявка на участие в конкурсе</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.LastName)
        @Html.HiddenFor(model => model.Position)
        @Html.HiddenFor(model => model.RegisterDate)
        @Html.HiddenFor(model => model.RowVersion)
        @Html.HiddenFor(model => model.WAzureApp)
        @*Html.HiddenFor(model => model.WPhone8App)*@
        @Html.HiddenFor(model => model.WPhoneAppUrl)
        @Html.HiddenFor(model => model.AppName)
        @Html.HiddenFor(model => model.AppUrl)
        @Html.HiddenFor(model => model.ApprovalDate)
        @Html.HiddenFor(model => model.AreYouAStudent)
        @Html.HiddenFor(model => model.City)
        @Html.HiddenFor(model => model.Country)
        @Html.HiddenFor(model => model.DemoUrl)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.FirstName)

        <div style="font-weight: bold">
            @Html.DisplayNameFor(model => model.AppName)
        </div>
        <div>
            @Html.DisplayFor(model => model.AppName)
        </div><br />

        <div>
            <b>@Html.DisplayNameFor(model => model.Windows8App)</b>
        </div>
        <div>
            @Html.EditorFor(model => model.Windows8App)
            @Html.ValidationMessageFor(model => model.Windows8App)
        </div><br />
        
        <div>
            <b>@Html.DisplayNameFor(model => model.WPhone8App)</b>
        </div>
        <div>
            @Html.EditorFor(model => model.WPhone8App)
            @Html.ValidationMessageFor(model => model.WPhone8App)
        </div><br />

        <div>
            <b>@Html.DisplayNameFor(model => model.Approved)</b>
        </div>
        <div>
            @Html.EditorFor(model => model.Approved)
            @Html.ValidationMessageFor(model => model.Approved)
        </div><br />

        <div>
            <b>@Html.DisplayNameFor(model => model.Comments)</b>
        </div>
        <div class="input-control textarea">
            @Html.TextAreaFor(model => model.Comments)
            @Html.ValidationMessageFor(model => model.Comments)
        </div><br />
    </fieldset>
            <p>
                <input type="submit" value="Сохранить" />
            </p>
            
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        
    </div>
</div>

