            <td>
                <a href="@Url.Action("Games", "Contests")">
                    <button class="btn btn-default" value="Назад">Назад</button>
                </a>&nbsp;
            </td>
            <td>
                <div style="max-width:50%">
                    <a href="@Url.Action("Create", "Games")" style="text-decoration: none;">
                        <button class="btn btn-primary" value="Участвовать">Участвовать</button>
                    </a>
                </div>
            </td>
        </tr>
